<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutimage"
    tools:context=".CashierHomeActivity">

    <TextView
        android:id="@+id/textViewHeaderCashier"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="Cashier Menu"
        android:textColor="#F44336"
        android:textColorHint="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonShowPayments"
        android:layout_width="187dp"
        android:layout_height="33dp"
        android:background="#F44336"
        android:text="Show Payments Due"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeaderCashier"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/buttonCashierLogout"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:background="#F44336"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toEndOf="@+id/textViewHeaderCashier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

</androidx.constraintlayout.widget.ConstraintLayout>